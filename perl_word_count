my %COUNT ;
use Data::Dumper ;
open ( FH , '/home/ec2-user/error.txt') or die " Can't open file $!" ;
while ( my $line = <FH> )
{
chomp($line) ;

@line = split /\s+/ , $line ;
 foreach my $word ( @line ) 
   {
      if ($word =~ m/error{1,3}/ ) 
       {
       $COUNT{$word}++ ;
       }
   }

}
foreach my $word ( keys %COUNT)
 {
    printf "%-10s ==> %s \n" , $word  , $COUNT{$word} ;
}
print "\n\n" ;
